<Window x:Class="Ev3.DrawSensorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DrawSensor Test" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Canvas Width="300" Height="300" Background="LightYellow" x:Name="canvSensor"></Canvas>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right">
            <Button Margin="5" Width="140" Click="RandomClick">Random</Button>
            <Grid>
                <Slider Minimum="45" Maximum="180" Margin="5" x:Name="slidDens" ValueChanged="SlidDensChanged" Grid.Column="0"></Slider>
                <TextBlock Width="30"  Margin="5" Grid.Column="1" x:Name="txDens">45</TextBlock>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
